                      <span class="fame-rel-name clickable" data-action="navigate" data-type="faction" data-id="{{factionId}}">{{factionName}}</span>
                      {{{tierBadge tier true}}}
                      {{#if isMember}}{{#unless memberHidden}}<i class="fa-solid fa-star fame-member-star"></i>{{/unless}}{{/if}}
                      {{#if rank}}{{#unless memberHidden}}<span class="fame-member-rank-badge" style="background:{{rank.color}}">{{rank.name}}</span>{{/unless}}{{/if}}
                    </div>
                    <div class="fame-rel-bar-wrap">
                      {{#if @root.isGM}}
                      <div class="fame-bar-container compact" data-id="{{../id}}:{{factionId}}" data-type="actor-faction" data-mode="manual">
                        <div class="fame-bar"><div class="fame-bar-track"><div class="fame-bar-zero" style="left:50%"></div><div class="fame-bar-fill" style="left:{{fillLeft value @root.min @root.max}}%;width:{{fillWidth value @root.min @root.max}}%;background:{{tier.color}}"></div><div class="fame-bar-thumb" style="left:{{percentage value @root.min @root.max}}%;background:{{tier.color}}"></div></div><input type="range" class="fame-bar-slider" min="{{@root.min}}" max="{{@root.max}}" value="{{value}}" data-id="{{../id}}:{{factionId}}" data-type="actor-faction" data-mode="manual"></div>
                        <div class="fame-bar-controls"><button type="button" class="fame-bar-adj fame-minus" data-action="adjustRep" data-id="{{../id}}:{{factionId}}" data-type="actor-faction" data-mode="manual" data-direction="minus"><i class="fa-solid fa-minus"></i></button><input type="number" class="fame-bar-val" value="{{value}}" min="{{@root.min}}" max="{{@root.max}}" data-id="{{../id}}:{{factionId}}" data-type="actor-faction" data-mode="manual" style="color:{{tier.color}}"><button type="button" class="fame-bar-adj fame-plus" data-action="adjustRep" data-id="{{../id}}:{{factionId}}" data-type="actor-faction" data-mode="manual" data-direction="plus"><i class="fa-solid fa-plus"></i></button></div>
                      </div>
                      {{else}}<span class="fame-rel-value-display" style="color:{{tier.color}}">{{#if (gt value 0)}}+{{/if}}{{value}}</span>{{/if}}
                    </div>
                    {{#if @root.isGM}}<button type="button" class="fame-icon-btn fame-hide-btn {{#if hidden}}active{{/if}}" data-action="toggleRelationHidden" data-rel-type="actorFaction" data-entity-id="{{../id}}" data-target-id="{{factionId}}" data-tooltip="{{#if hidden}}{{localize (concat @root.moduleId '.tooltips.show')}}{{else}}{{localize (concat @root.moduleId '.tooltips.hide')}}{{/if}}"><i class="fa-solid fa-eye{{#if hidden}}-slash{{/if}}"></i></button>{{/if}}
                  </div>
                  {{else}}<div class="fame-no-items">{{localize (concat @root.moduleId '.relations.no-factions')}}</div>{{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        {{else}}<div class="fame-no-items center">{{localize (concat @root.moduleId '.relations.no-actors')}}</div>{{/each}}
      </div>
    </div>

  </section>
